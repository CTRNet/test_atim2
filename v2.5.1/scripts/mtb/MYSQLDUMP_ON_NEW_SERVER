-- ---------------------------------------------------------------------------
-- log in as root to mysql from the dir where you want the dump to be placed in
-- you will be prompted for a ps it is aw3se4
-- ---------------------------------------------------------------------------

cd /var/www/html/sql_script

mysqldump -u mb_dbuser -p atimv251 > atimv25112182012.sql


-- ---------------------------------------------------------------------------
-- running batch on server	   create new schema first using mysql browser
-- ---------------------------------------------------------------------------

cd /var/www/html/sql_script


mysql -umb_dbuser -pmb_DBus3r testv251 < atimv25112182012.sql

-- ---------------------------------------------------------------------------
-- mysql log in thru shell prompt


cd /var/www/html/sql_script

GRANT ALL PRIVILEGES ON testv251.* TO 'mb_dbuser'@'%' ;


source /var/www/html/sql_script/testv243a.sql;


-- local got ot mysql browser --> tools --> windows command line

cd C:\wamp\bin\mysql\mysql5.5.24\bin


mysqldump -u root -p atimv243a > H:\backup\mtb_08152012.sql


